{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalEnv": [
    "SKIP_ENV_VALIDATION",
    "NODE_ENV",
    "NEXT_PUBLIC_APP_CONTRACT_ADDRESS",
    "NEXT_PUBLIC_DEV_CONTRACT_ADDRESS",
    "PRIVATE_KEY",
    "ALCHEMY_API_KEY",
    "ETHERSCAN_API_KEY",
    "POLYGONSCAN_API_KEY"
  ]
}
